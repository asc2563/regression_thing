{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "paths": {
            "@/*": ["./src/*"],
            "@lib/*": ["./src/lib/*"],
            "@hooks/*": ["./src/lib/hooks/*"],
            "@db/*": ["./src/lib/db/*"],
            "@types": ["./src/lib/types.ts"]
        }
    }
}
